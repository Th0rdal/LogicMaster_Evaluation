# Base Python image
FROM python:3.9-slim

# Set working directory inside the container
WORKDIR /app

# Copy your source code into the container
COPY src/factors/ ./src/factors/
COPY src/params.py ./src/params.py
COPY src/globals.py ./src/globals.py
COPY src/stockfish.py ./src/stockfish.py
COPY src/inputProcessing.py ./src/inputProcessing.py



# Copy training and testing data into the container
COPY resources/training/ /app/resources/training/
COPY resources/testing/ /app/resources/testing/